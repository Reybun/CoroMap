<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:fontFamily="@font/kol"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/selector3"
        >

        <TextView
            android:id="@+id/nbtotal"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="70dp"
            android:fontFamily="@font/kolbold"
            android:text="WORLD :"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/morttotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 MORTS"
            android:fontFamily="@font/kolbold"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/infectedtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 INFECTES"
            android:layout_weight="1"
            android:textSize="17sp"
            android:fontFamily="@font/kol"
            />

    </LinearLayout>


<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />
</LinearLayout>

</LinearLayout>